<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/correo_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/paranew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/rv"
        app:layout_constraintBottom_toBottomOf="@+id/forText"
        app:layout_constraintStart_toEndOf="@+id/forText" />

    <TextView
        android:id="@+id/bodyNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cuerpo:"
        app:layout_constraintEnd_toStartOf="@+id/bodydetailNew"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paranew" />

    <TextView
        android:id="@+id/forText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Para:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bodydetailNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="12dp"
        android:minWidth="250dp"
        android:inputType="textPersonName"
        android:text="@string/bd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paranew" />

    <TextView
        android:id="@+id/asuntotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De:"
        app:layout_constraintEnd_toStartOf="@+id/aboutNew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aboutNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="senderdetail"
        app:layout_constraintStart_toEndOf="@+id/asuntotext"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Abouttext"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:text="Asunto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asuntotext" />

    <TextView
        android:id="@+id/aboutdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/Abouttext"
        app:layout_constraintTop_toBottomOf="@+id/aboutNew" />

</androidx.constraintlayout.widget.ConstraintLayout>